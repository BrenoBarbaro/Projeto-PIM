    printf("*************************************************");
    printf("\n*            Sistema de Mercado               *");
    printf("\n*                                               *");
    printf("\n*   1 - Iniciar Compras                         *");
    printf("\n*   2 - Seus Produtos                           *");
    printf("\n*                                               *");
    printf("\n*   5 - Sair                                    *");
    printf("\n*                                               *");
    printf("\n*************************************************\n");
}

void menu()
{
    printf("*************************************************");
    printf("\n*            Sistema de Mercado                *");
    printf("\n*                                               *");
    printf("\n*   1 - Sistema de Caixa                        *");
    printf("\n*   2 - Sistema Financeiro                      *");
    printf("\n*                                               *");
    printf("\n*   5 - Sair                                    *");
    printf("\n*                                               *");
    printf("\n*************************************************");
}

struct Produtos listaProdutos(struct produtos *x, int tamanho)
{
    for(int i;i<tamanho;i++)
    {
        printf("%d\t   %s\t\t\t%d",x.codProduct,x.nameProduct,x.valueProduct);
    }
    return x;
}

typedef struct Produtos
{
    int codProduct[4];
    char nameProduct[10];
    float valueProduct;
}produtos;

int main()
{
    produtos *lista[5];
    int op;

    do{
    menu();
    printf("\nOpcao: ");
    scanf("%d",&op);
        switch(op)
        {
            case 1:

                    DesingCaixa();
                    printf("\nOpcao: ");
                    scanf("%d",&op);
                    switch(op)
                    {
                        case 1:
                            //do{
                                listaProdutos(&lista,5);
                            //}while(sn != 'n');
                    }
            break;

            case 2:
                    systemFinanceiro();

            break;

            case 5: break;
            default:
                    printf("\n\nEntre com uma opcao valida!");
            break;
        }
    }while(op!=5);
}
