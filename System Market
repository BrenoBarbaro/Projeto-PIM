#include <stdio.h>
#include <stdlib.h>

typedef struct numero
{
    int valor;
    struct Numero *proximo;
} Numero;

Numero *inicio = NULL;

int imprimeMenu();
void sair();
void adicionar();
void listar();
void remover();

int main()
{
    int op;

    do
    {
        system("CLS");
        op = imprimeMenu();
        switch(op)
        {
            case 0: sair(); break;
            case 1: adicionar(); break;
            case 2: listar(); break;
            case 3: remover(); break;
        }
    }while(op!=0);

    return 0;
}

int imprimeMenu()
{
    int op;

    printf("\n*** MENU ***\n\n");
    printf("0 - Sair");
    printf("\n1 - Adicionar");
    printf("\n2 - Listar");
    printf("\n3 - Remover");
    printf("\n\nEntre com a opcao desejada: ");
    scanf("%d",&op);
    fflush(stdin);
    return op;
}

void sair()
{
    printf("\n\nBye...\n\n");
}

void adicionar()
{
    Numero *novo = (Numero *) malloc(sizeof(Numero));
    novo->proximo = NULL;
    Numero *aux = inicio;
    printf("\n\nEntre com novo numero: ");
    scanf("%d",&novo->valor);
    fflush(stdin);
    if(inicio==NULL)
    {
        inicio= novo;
    }
    else
    {
        while(aux->proximo!=NULL)
        {
            aux = aux->proximo;
        }
        aux->proximo = novo;
    }
}

void listar()
{
    Numero *aux = inicio;

    int c;

    if(aux == NULL)
    {
        printf("\n---------------------------\n\n");
        printf("\n\nA lista esta vazia.\n\n");
        printf("\n---------------------------\n\n");
        c = getchar();
    }
    if(aux != NULL)
    {
        printf("\n\tNumeros");
        printf("\n---------------------------\n\n");
        while(aux!=NULL)
        {
            printf("%d\n",aux->valor);
            aux=aux->proximo;
        }
        printf("\n---------------------------\n\n");
        c = getchar();
    }
}

void remover()
{
    Numero *remove = inicio;
    int c;
    if(inicio == NULL)
    {
        printf("\n---------------------------\n\n");
        printf("\n\nA lista esta vazia.\n\n");
        printf("\n---------------------------\n\n");
        c = getchar();
    }
    else
    {
        if(inicio->proximo ==  NULL)
        {
            inicio = NULL;
        }
        else
        {
            inicio=inicio->proximo;
            free(remove);
            remove = NULL;
        }
        listar();
    }
}
